{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "exclude": [
    "../node_modules",
    "./**/*.spec.ts"
  ],
  "include": [
    "*.ts",
    "**/*.ts"
  ]
}
